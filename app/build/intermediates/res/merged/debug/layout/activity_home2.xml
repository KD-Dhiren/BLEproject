<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_06"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_main_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_gray_color"
        android:orientation="vertical"
        android:padding="5sp">
        <!--
        totalStep
        totalCalories
        totalDistances
        totalActiveTime
        HeartRate
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5sp"
                android:text="Real-Time Info"
                android:textSize="20sp"/>

            <!--android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"-->

            <TextView
                android:id="@+id/txt_connection_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/common_gray_color"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:focusable="true"
                android:gravity="center|end"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingBottom="5sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="status : ...."/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01sp"
            android:background="@color/black90"/>

        <LinearLayout
            android:id="@+id/ll_all_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_data_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_steps"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/iv_step"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:paddingRight="2sp"
                        android:src="@drawable/footprint"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step : "/>

                    <TextView
                        android:id="@+id/txt_step"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5sp"
                        android:text="0"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/iv_calorie"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:paddingRight="2sp"
                        android:src="@drawable/calorie"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5sp"
                        android:text="Calories : "/>

                    <TextView
                        android:id="@+id/txt_cal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_data_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/iv_distance"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_gravity="center"
                        android:paddingRight="5sp"
                        android:src="@drawable/distance"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance  :"/>

                    <TextView
                        android:id="@+id/txt_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5sp"
                        android:text="0"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/iv_active_time"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_gravity="center"
                        android:paddingRight="5sp"
                        android:src="@drawable/active_time"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Time : "/>

                    <TextView
                        android:id="@+id/txt_active_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5sp"
                        android:text="0"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/iv_hrt_beat"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:paddingRight="5sp"
                        android:src="@drawable/heart_beat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="heartBeat  :"/>

                    <TextView
                        android:id="@+id/txt_hrt_beat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5sp"
                        android:text="0"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_action_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_main_data"
        android:background="@color/white"
        android:gravity="center|start"
        android:padding="10sp"
        android:text="Related Actions"
        android:textSize="20sp"/>

    <GridView
        android:id="@+id/layout_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_action_header"
        android:horizontalSpacing="5sp"
        android:numColumns="2"
        android:verticalSpacing="5sp"
        tools:listitem="@layout/layout_ble_action"/>

    <RelativeLayout
        android:id="@+id/rl_disable_hover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_action_header"
        android:background="@color/black_trans"
        android:visibility="gone">

    </RelativeLayout>
</RelativeLayout>
