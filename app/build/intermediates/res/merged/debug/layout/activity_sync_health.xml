<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_sync_health"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_gravity="center"
                android:layout_margin="12sp"
                android:background="@drawable/bind_find_color_selecter"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Synchronize health information"
                android:textAllCaps="true"
                android:textColor="@color/white_disable_selector"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_sport_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_sleep_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tv_heart_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>